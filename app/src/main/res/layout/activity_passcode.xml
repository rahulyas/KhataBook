<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".khatabook.passcode">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/rectangle">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:src="@drawable/ic_login_hero" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="250dp"
                android:layout_marginRight="30dp"
                android:text="Passcode"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Enter 4 digit Passcode -->
        <TextView
            android:layout_below="@+id/user_number"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enter 4 digit Passcode"
            android:textSize="18sp" />

        <!-- Number -->
        <TextView
            android:layout_below="@+id/layout1"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:id="@+id/user_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+91- 9966338855"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_below="@+id/textView6"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:id="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/number1"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="numberPassword"
                android:maxLength="1" />

            <EditText
                android:id="@+id/number2"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="numberPassword"
                android:maxLength="1" />

            <EditText
                android:id="@+id/number3"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="numberPassword"
                android:maxLength="1" />

            <EditText
                android:id="@+id/number4"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="numberPassword"
                android:maxLength="1" />

            <ImageView
                android:id="@+id/set_passcode"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="7dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_eye_solid" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/layout3"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:textColor="#595765"
                android:text="Don\'t remember a passcode ?" />

            <TextView
                android:id="@+id/re_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Re-create"
                android:textColor="#EC7800" />


        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>